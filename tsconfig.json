{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": ".",
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "**/*.spec.ts"
  ]
}